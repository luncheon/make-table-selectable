{
  "$schema": "https://biomejs.dev/schemas/1.6.1/schema.json",
  "files": {
    "include": ["src/**/*.ts"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 140
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noAssignInExpressions": "off",
        "noConsoleLog": "error"
      },
      "style": {
        "noNonNullAssertion": "off",
        "noParameterAssign": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "arrowParentheses": "asNeeded"
    }
  }
}
